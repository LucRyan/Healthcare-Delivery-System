<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <Button
        android:id="@+id/chwbutton"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:text="CHW Center" />

    <Button
        android:id="@+id/patientbutton"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_above="@+id/chwbutton"
        android:layout_alignLeft="@+id/chwbutton"
        android:layout_marginBottom="16dp"
        android:text="Patient Center" />

    <TextView
        android:id="@+id/helloTextView"
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/patientbutton"
        android:layout_alignLeft="@+id/patientbutton"
        android:layout_alignRight="@+id/patientbutton"
        android:layout_marginBottom="35dp"
        android:textColor="#FF0000"
        android:text="Hello: "
        android:textStyle="bold" 
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
